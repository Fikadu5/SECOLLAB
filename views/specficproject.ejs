<!DOCTYPE html>
<html>
<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/css/specficcollab.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <title><%= project.title %></title>
  <style>

  </style>
</head>
<body>
<%- include("navigationloggedin") %>
<%- include("sidebar") %>


 <div class="container">
    <h1><%= project.title %></h1>
    <% if (project.tags && project.tags.length > 0) { %>
      <div class="blog-tags">
          <% for(let j = 0; j < project.tags.length; j++) { %>
              <a style="color:black;"  href="/blogs/catagories/<%= project.tags[j].name %>" class="tag"><%= project.tags[j].name %></a>
          <% } %>
      </div>
  <% } %>
    <p><%= project.description %></p>
    <h1>Requirments</h1>
    <p><%= project.requirments %></p>
    <h1>Looking for</h1>
    <p><%= project.looking_for %></p>
    <p style="display:inline-block;">Project Owner</p>

    <a style="text-decoration: none;;" href="{{ url_for('profile', id=collab.user.id) }}"><p><%= project.owner.fname %>  <%=project.owner.lname%> </p></a>
<form action="/projects/registerinterest/<%= project._id %>" method="post">


    <button type="submit" id="regis" style="margin-left: 40%;" project-id=<%= project._id%> class="btn btn-dark">Register Interest</button>
    
  </form>
    
    <div class="error-message"></div>
  </div>





 <script src="/js/darkmode.js"></script>
<script src="/js/spejs"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
  <script src="/js/darkmode.js"></script>


</body>
</html>
