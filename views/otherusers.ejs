<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Users</title>

  <!-- Bootstrap core CSS -->
  <link href="{{ url_for('static', filename='vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <!-- Custom fonts for this template -->
  <link href="{{ url_for('static', filename='vendor/fontawesome-free/css/all.min.css')}}" rel="stylesheet" type="text/css">
  <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/otherusers.css">

  <style>
    body.dark-mode {
      background-color: black;
      color: white;
    }
    .card {
      margin-bottom: 20px;
    }
    div {
      margin-bottom: 10px;
    }
    .follow {
      margin-left: 45%;
    }
  </style>
</head>

<body>
  <%- include("navigationloggedin") %>

  <%- include("sidebar") %>
  <!-- Page Header -->

  <div class="container">
    <div class="row mb-4">
      <div class="col-12 col-md-8 offset-md-2 d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" id="text" aria-label="Search">
        <button class="btn btn-outline-success" id="search" type="submit">Search</button>
      </div>
    </div>

    <div class="row">
      <% if(users) { %>
        <% for(let i = 0; i < users.length; i++) { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100">
              <a href="/otherprofile/<%=users[i]._id %>" style="text-decoration: none;">
                <img src="/uploads/<%= users[i].image %>" class="card-img-top" alt="Profile Image">
                <div class="card-body">
                  <h5 class="card-title"><%= users[i].fname %> <%= users[i].lname %></h5>
                </a>
                <button type="button" style="margin:10px;"  user-id="<%= users[i]._id %>" id="<%= users[i]._id %>" class="btn btn-primary follow">Follow</button>
              </div>
            </div>
          </div>
        <% } %>
      <% } else { %>
        <h3 class="text-center">There are no users yet</h3>
      <% } %>
    </div>
  </div>

  <hr>

  <!-- Bootstrap core JavaScript -->
  <script src="{{ url_for('static', filename='vendor/jquery/jquery.min.js')}}"></script>
  <script src="{{ url_for('static', filename='vendor/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
  <!-- Custom scripts for this template -->
  <script src="{{ url_for('static', filename='js/clean-blog.min.js')}}"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  <script src="../static/js/otherusers.js"></script>
  <script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
  <script src="/js/darkmode.js"></script>
  <script src="/js/index.js"></script>

</body>

</html>
