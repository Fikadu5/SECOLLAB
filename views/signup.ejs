<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/signup.css">
    <style>
        #username-availability {
            display: block;
            margin-top: 10px;
            padding: 10px;
            font-size: 16px;
            font-weight: 500;
            border-radius: 8px;
            text-align: center;
            max-width: 300px;
            margin-left: auto;
            margin-right: auto;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
        }
      
        .available {
            color: #155724; /* Dark green */
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            border: 2px solid #c3e6cb;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
      
        .unavailable {
            color: #721c24; /* Dark red */
            background: linear-gradient(135deg, #f8d7da, #f5c6cb);
            border: 2px solid #f5c6cb;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
      
        .checking {
            color: #004085; /* Dark blue */
            background: linear-gradient(135deg, #cce5ff, #b8daff);
            border: 2px solid #b8daff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        body.dark-mode {
            background-color: #121212;
            color: #e0e0e0;
        }

        body.dark-mode .login-container {
            background-color: #1e1e1e;
            border: 1px solid #333;
        }

        body.dark-mode .form-control {
            background-color: #333;
            color: #e0e0e0;
            border: 1px solid #444;
        }

        body.dark-mode .btn-primary {
            background-color: #444;
            border-color: #555;
        }

        body.dark-mode .btn-primary:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <%- include("navigationloggedout") %>

    <% if (messages && messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>

    <% if (messages && messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>

    <% if (messages && messages.length > 0) { %>
        <div class="alert alert-info">
            <%= messages %>
        </div>
    <% } %>

    <div class="container mt-5">
        <div class="form-container mx-auto" style="max-width: 600px;">
            <h2 class="mb-4">Signup</h2>

            <form action="/authenticate/signup" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="fname" class="form-label">First Name:</label>
                    <input type="text" class="form-control" id="fname" name="fname" required>
                </div>
                <div class="mb-3">
                    <label for="lname" class="form-label">Last Name:</label>
                    <input type="text" class="form-control" id="lname" name="lname" required>
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    <span id="username-availability"></span>
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age:</label>
                    <input type="number" class="form-control" id="age" name="age" required>
                </div>
                <div class="mb-3">
                    <label for="twitter" class="form-label">Twitter:</label>
                    <input type="text" class="form-control" id="twitter" name="twitter">
                </div>
                <div class="mb-3">
                    <label for="phone_number" class="form-label">Phone Number:</label>
                    <input type="text" class="form-control" id="phone_number" name="phone_number" required>
                </div>
                <div class="mb-3">
                    <label for="github" class="form-label">GitHub:</label>
                    <input type="text" class="form-control" id="github" name="github">
                </div>
                <div class="mb-3">
                    <label for="previous" class="form-label">Previous:</label>
                    <input type="text" class="form-control" id="previous" name="previous" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image:</label>
                    <input type="file" class="form-control" id="image" name="image">
                </div>
                <div class="mb-3">
                    <label for="country" class="form-label">Country:</label>
                    <input type="text" class="form-control" id="country" name="country">
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">City:</label>
                    <input type="text" class="form-control" id="city" name="city">
                </div>
                <div class="mb-3">
                    <label for="skills" class="form-label">Skills:</label>
                    <input type="text" class="form-control" id="skills" name="skills" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="about_me" class="form-label">About Me:</label>
                    <textarea class="form-control" id="about_me" name="about_me" rows="3" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="employment-status" class="form-label">Employment Status:</label>
                    <select id="employment-status" name="employment_status" class="form-select" required>
                        <option value="" disabled selected>Select your status</option>
                        <option value="employed">Employed</option>
                        <option value="unemployed">Unemployed</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="education-level" class="form-label">Education Status:</label>
                    <select id="education-level" name="education_status" class="form-select" required>
                        <option value="" disabled selected>Select your education level</option>
                        <option value="Bachelor's Degree">Bachelor's Degree</option>
                        <option value="Master's Degree">Master's Degree</option>
                        <option value="phd">Doctorate (PhD)</option>
                        <option value="Associate's Degree">Associate's Degree</option>
                        <option value="High School Diploma">High School Diploma</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="mb-3">
                    <label for="confirm_password" class="form-label">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('username').addEventListener('input', function() {
            const username = this.value;
            const availabilityMessage = document.getElementById('username-availability');

            if (username.length > 0) {
                fetch(`/authenticate/check-username?username=${encodeURIComponent(username)}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.available) {
                            availabilityMessage.textContent = 'Username is available';
                            availabilityMessage.className = 'available';
                        } else {
                            availabilityMessage.textContent = data.message;
                            availabilityMessage.className = 'unavailable';
                        }
                    })
                    .catch(error => {
                        console.error('Error checking username:', error);
                        availabilityMessage.textContent = 'Error checking username';
                        availabilityMessage.className = 'unavailable';
                    });
            } else {
                availabilityMessage.textContent = '';
                availabilityMessage.className = '';
            }
        });
    </script>

    <script src="/js/darkmode.js"></script>
</body>
</html>
