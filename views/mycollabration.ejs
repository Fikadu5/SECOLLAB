<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Projects</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/sidebar.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/collabration.css">
    <style>


    </style>
</head>

<body>
  <%- include("navigationloggedin") %>

  <%- include("sidebar") %>


  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
<% } %>

<% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger">
        <%= messages.error %>
    </div>
<% } %>

<% if (messages && messages.length > 0) { %>
    <div class="alert alert-info">
        <%= messages %>
    </div>
<% } %>

        <div class="parent">
            <% if(projects.length === 0) { %>
                <h3>There are no projects available</h3>
            <% } else { %>
                <% for(let i=0;i< projects.length;i++) { %>
                    <div class="child">
                        <p><%= projects[i].title %></p>
                        <p><%= projects[i].description %></p>
                        <p>Due Date: <%= projects[i].dueDate %></p>
                        <a href="/projects/projects/<%= projects[i]._id %>" type="button">
                            <button class="details-button">View Details</button>
                        </a>
                    </div>
                <% } %>
            <% } %>
        </div>

    

        
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
<script src="/js/darkmode.js"></script>
<script src="/js/collabration.js"></script>
</body>

</html>

