<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="path/to/fontawesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/myfollowers.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Followers</title>
 
</head>
<body>
    <%- include("navigationloggedin") %>
    <%- include("sidebar") %>
    
    <div class="container">
        <h1>Your Followers</h1>
        <div class="following">
            <% if (paginatedFollowers.results.length > 0) { %>
                <% paginatedFollowers.results.forEach(f => { %>
                    <% if (f.follower) { %>
                        <div class="follower">
                            <div class="profile-image-container">
                                <img src="/uploads/<%= f.follower.image %>" alt="User Profile" class="profile-image">
                            </div>
                            <div class="follower-details">
                                <a href="/otherprofile/<%= f.following._id %>">
                                <p class="follower-name"><%= f.follower.fname %> <%= f.follower.lname %></p></a>
                            </div>
                            
                        </div>
                        <hr>
                    <% } else { %>
                        <div class="follower">
                            <p class="follower-name">Unknown Follower</p>
                        </div>
                        <hr>
                    <% } %>
                <% }) %>
            <% } else { %>
                <h3 style="text-align: center;">You have no followers yet</h3>
            <% } %>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% if (paginatedFollowers.currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= paginatedFollowers.currentPage - 1 %>&limit=<%= paginatedFollowers.limit %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                <% } %>

                <% for (let i = 1; i <= paginatedFollowers.totalPages; i++) { %>
                    <li class="page-item <% if (paginatedFollowers.currentPage === i) { %>active<% } %>">
                        <a class="page-link" href="?page=<%= i %>&limit=<%= paginatedFollowers.limit %>"><%= i %></a>
                    </li>
                <% } %>

                <% if (paginatedFollowers.currentPage < paginatedFollowers.totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= paginatedFollowers.currentPage + 1 %>&limit=<%= paginatedFollowers.limit %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
