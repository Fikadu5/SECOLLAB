.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
}

/* Tag Styles */
.tag {
  display: inline-block;
  background-color: #9b59b6;
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  text-decoration: none;
  margin-right: 0.5rem;
  margin-bottom: 0.5rem;
  transition: background-color 0.3s ease;
}

.tag:hover {
  background-color: #8e44ad;
  color:white;
}
    </style>
</head>

<body >

<%- include ("navigationloggedin") %>
<%- include ("sidebar") %>

  <main class="mt- pt-0" >
    <div class="container">

      <!--Section: Post-->
      <section class="mt-6">
 <h1 style="margin-left: 30%;"><%= blog.title %></h1>
        <!--Grid row-->
        <div class="row">

          <!--Grid column-->
          <div class="col-md-12 mb-4">

            <!--Featured Image-->
            <div class="card mb-12 wow fadeIn">

              <img src="/uploads/blog/<%= blog.image %>"  class="img-fluid" alt="">

            </div>
            <!--/.Featured Image-->
            
            <!--Card-->
            <div class="card mb-4 wow fadeIn">

              <!--Card content-->
              <div class="card-body">

                <div class="container">
                  
              
                  <% if (blog && blog.tags && blog.tags.length > 0) { %>
                    <% for(let i=0; i< blog.tags.length;i++) { %>
                      <a href="/blogs/" class="tag"><%= blog.tags[i].name %></a>
                    
                  <% } }%>



                <p><%= blog.body %></p>

<button style="display: block;margin-bottom: 20px;background: none;
            border: none;" id="like" class="like-button" blog-id="<%= blog._id %>" blog-like="<%= blog.like %>">
                    <i id="icon" class="fa-regular fa-thumbs-up"></i>

                    <span  liked="{{ liked }}" id="numlike" class="like-count"><%= blog.like %></span>
                </button>
                  <p class="post-meta">Posted by <%= blog.owner.fname %> <%= blog.owner.lname %> </p>
          <p class="post-meta">On <%= blog.created_at %></p>

              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
  <!-- SCRIPTS -->
  <!-- JQuery -->
  <script type="text/javascript" src="../static/js/jquery-3.4.1.min.js"></script>
  <!-- Bootstrap tooltips -->
  <script type="text/javascript" src="../static/js/popper.min.js"></script>
  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="../static/js/bootstrap.min.js"></script>
  <!-- MDB core JavaScript -->
  <script type="text/javascript" src="../static/js/mdb.min.js"></script>
  <!-- Initializations -->
  <script type="text/javascript">
    // Animations initialization
    new WOW().init();

  </script>
