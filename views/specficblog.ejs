    <style>
     .like-button {
            background: none;
            border: none;
            color: grey;
            cursor: pointer;
            font-size: 1.2em;
            display: flex;
            align-items: center;
        }
        .like-button .fa-thumbs-up {
            margin-right: 5px;
            transition: transform 0.2s ease-in-out;
        }
        .like-button.liked .fa-thumbs-up {
            color: #007bff;
            transform: scale(1.2);
        }
        .navbar-nav .nav-link {
  color: white;
}
