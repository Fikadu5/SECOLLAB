<!DOCTYPE html>
<html>
<head>
  <title>Add project for collaboration</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" href="/images/newohana.PNG" type="image/png">
  <link rel="stylesheet" href="/css/login.css" >
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/addcollabration.css">
  <style>
    .checkbox-wrapper {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }
    
    .checkbox-label {
      display: flex;
      align-items: center;
      cursor: pointer;
      font-size: 16px;
      color: #333;
    }
    
    .checkbox-label input[type="checkbox"] {
      appearance: none;
      -webkit-appearance: none;
      -moz-appearance: none;
      width: 24px;
      height: 24px;
      border-radius: 4px;
      background-color: #f2f2f2;
      border: 2px solid #7e8cff;
      margin-right: 10px;
      position: relative;
      transition: all 0.3s ease;
    }
    
    .checkbox-label input[type="checkbox"]:checked {
      background-color: #7e8cff;
      border-color: #7e8cff;
    }
    
    .checkbox-label .custom-checkbox {
      display: inline-block;
      width: 24px;
      height: 24px;
      border-radius: 4px;
      background-color: #f2f2f2;
      border: 2px solid #7e8cff;
      margin-right: 10px;
      position: relative;
      transition: all 0.3s ease;
    }
    
    .checkbox-label input[type="checkbox"]:checked + .custom-checkbox {
      background-color: #7e8cff;
      border-color: #7e8cff;
    }
  </style>
</head>
<body>

  <%- include("navigationloggedin") %>

  <%- include("sidebar") %>



  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
<% } %>

<% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger">
        <%= messages.error %>
    </div>
<% } %>

<% if (messages && messages.length > 0) { %>
    <div class="alert alert-info">
        <%= messages %>
    </div>
<% } %>
  <div class="container my-5">
    <form action="/projects/addproject" method="post">
      <div class="form-group">
        <label for="name">Project Name</label>
        <input type="text" name="name" class="form-control" id="name">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" name="description" class="form-control" id="description" rows="5" required></textarea>
      </div>

      <div class="form-group">
        <label for="requirment">Requirement</label>
        <textarea type="text" name="requirment" class="form-control" id="requirment" rows="5" required></textarea>
      </div>

      <div class="form-group">
        <label for="lookingfor">Looking for</label>
        <textarea type="text" name="lookingfor" class="form-control" id="lookingfor" rows="5" required></textarea>
      </div>

      <div class="form-group">
        <label for="eventDate" class="form-label">Due Date</label>
        <input class="form-control" name="date" id="eventDate" type="date">
      </div>
      <% for(let i=0;i < tags.length ;i++) { %>
        <label class="checkbox-label">
          <input type="checkbox" name="myCheckboxes" value="<%= tags[i]._id %>">
          
          <%= tags[i].name %>
        </label>
        <% } %>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
  <script src="/js/darkmode.js"></script>
</body>
</html>
