 <link rel="stylesheet" href="/css/newblog.css">
  <link rel="stylesheet" href="/css/sidebar.css">
    <style>
        body.dark-mode,
        body.dark-mode form{
        background-color:black;
        }
        .checkbox-wrapper {
          display: flex;
          flex-wrap: wrap;
          gap: 15px;
        }
        
        .checkbox-label {
          display: flex;
          align-items: center;
          cursor: pointer;
          font-size: 16px;
          color: #333;
        }
        
        .checkbox-label input[type="checkbox"] {
          appearance: none;
          -webkit-appearance: none;
          -moz-appearance: none;
          width: 24px;
          height: 24px;
          border-radius: 4px;
          background-color: #f2f2f2;
          border: 2px solid #7e8cff;
          margin-right: 10px;
          position: relative;
          transition: all 0.3s ease;
        }
        
        .checkbox-label input[type="checkbox"]:checked {
          background-color: #7e8cff;
          border-color: #7e8cff;
        }
        
        .checkbox-label .custom-checkbox {
          display: inline-block;
          width: 24px;
          height: 24px;
          border-radius: 4px;
          background-color: #f2f2f2;
          border: 2px solid #7e8cff;
          margin-right: 10px;
          position: relative;
          transition: all 0.3s ease;
        }
        
        .checkbox-label input[type="checkbox"]:checked + .custom-checkbox {
          background-color: #7e8cff;
          border-color: #7e8cff;
        }
        
        .checkbox-label .checkbox-icon {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          color: white;
          font-size: 14px;
          opacity: 0;
          transition: opacity 0.3s ease;
        }
        
        .checkbox-label input[type="checkbox"]:checked + .custom-checkbox .checkbox-icon {
          opacity: 1;
        }
    </style>
</head>
<body>
  <%- include("navigationloggedin") %>

  <%- include("sidebar") %>
  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
<% } %>

<% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger">
        <%= messages.error %>
    </div>
<% } %>

<% if (messages && messages.length > 0) { %>
    <div class="alert alert-info">
        <%= messages %>
    </div>
<% } %>
  <form action="/blogs/new" method="POST" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title">

    <label for="subtitle">Subtitle</label>
    <input type="text" id="subtitle" name="subtitle">

    <label for="content">Body</label>
    <textarea id="content" name="content" class="content"></textarea>
    <!-- <div class="form-group" style="margin-bottom: 20px;">
          <label for="img">Select Image:</label>
          <input type="file" name="image" id="img">
        </div> -->
        <div class="checkbox-wrapper">
          <% for(let i=0;i < tags.length ;i++) { %>
          <label class="checkbox-label">
            <input type="checkbox" name="myCheckboxes" value="<%= tags[i]._id %>">
            
            <%= tags[i].name %>
          </label>
          <% } %>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image:</label>
          <input type="file" class="form-control" id="image" name="image" >
      </div>

     <input type="submit" value="Submit">
  </form>
  
 
    <script>
      var simplemde = new SimpleMDE({ element: document.getElementById("content") });
  </script>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
