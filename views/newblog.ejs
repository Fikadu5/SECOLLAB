<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

 <link rel="stylesheet" href="/css/newblog.css">
  <link rel="stylesheet" href="/css/sidebar.css">
    <style>
        body.dark-mode,
        body.dark-mode form{
        background-color:black;
        }
    </style>
</head>
<body>
  <%- include("navigationloggedin") %>

  <%- include("sidebar") %>
  <form action="/blogs/new" method="POST" enctype="multipart/form-data">
    <label for="title">Title</label>
    <input type="text" id="title" name="title">

    <label for="subtitle">Subtitle</label>
    <input type="text" id="subtitle" name="subtitle">

    <label for="content">Body</label>
    <textarea id="content" name="content" class="content"></textarea>
    <!-- <div class="form-group" style="margin-bottom: 20px;">
          <label for="img">Select Image:</label>
          <input type="file" name="image" id="img">
        </div> -->
        <div class="checkbox-wrapper">
          <label class="checkbox-label">
            <input type="checkbox" class="checkbox-input">
           
            <% for(let i=0;i < tags.length ;i++) { %>
            <label>
              <input type="checkbox" name="myCheckboxes" value="<%= tags[i]._id %>"> <%= tags[i].name %>
            </label>
            
            <% } %>
          </label>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image:</label>
          <input type="file" class="form-control" id="image" name="image" required>
      </div>

     <input type="submit" value="Submit">
  </form>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
  <script src="/js/darkmode.js"></script>
</body>
</html>
