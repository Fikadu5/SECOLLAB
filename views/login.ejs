<!DOCTYPE html>
<html>
<head>
  <title>Login Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" href="/images/newohana.PNG" type="image/png">
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/login.css" >
</head>
<body>

  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
<% } %>

<% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger">
        <%= messages.error %>
    </div>
<% } %>

<% if (messages && messages.length > 0) { %>
    <div class="alert alert-info">
        <%= messages %>
    </div>
<% } %>

 <div class="login-container">
  
        <h1>Login to SEcollab</h1>
        <form action="/authenticate/login" method="POST">
            <label for="email">Email:</label>
            <input type="text" id="username" name="email" required><br><br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required><br><br>
            <button type="submit">Login</button>
        </form>
         <a href=""><p>Forget your password?</a></p>
        <p>Don't have an account? <a href="/authenticate/signup">Register</a></p>
    </div>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
