<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Following</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/myfollowing.css">
    <link rel="stylesheet" href="/css/sidebar.css">
</head>
<body>
  <%- include("navigationloggedin") %>
  <%- include("sidebar") %>
  <% if (messages && messages.success && messages.success.length > 0) { %>
    <div class="alert alert-success">
        <%= messages.success %>
    </div>
<% } %>

<% if (messages && messages.error && messages.error.length > 0) { %>
    <div class="alert alert-danger">
        <%= messages.error %>
    </div>
<% } %>

<% if (messages && messages.length > 0) { %>
    <div class="alert alert-info">
        <%= messages %>
    </div>
<% } %>
 
    <div class="container">
        <h1>Users I'm Following</h1>
        <div class="followers">
            <% if (following.results && following.results.length > 0) { %>
                <% following.results.forEach(f => { %>
                    <div class="follower">
                        <a href="">
                            <p><%= f.following.fname %> <%= f.following.lname %></p>
                        </a>
                        <form action="/unfollow/<%= f.following._id %>" method="post">
                            <button type="submit" class="unfollow-btn" follower-id="<%= f.following._id %>">Unfollow</button>
                        </form>
                    </div>
                    <hr>
                <% }); %>
            <% } else { %>
                <h3 style="margin-left: 30%; margin-top: 40px;">You don't follow anyone yet</h3>
                <a style="margin-left: 30%" href="">
                    <button type="button" class="btn btn-info">Click here to see other users</button>
                </a>
            <% } %>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% if (following.currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= following.currentPage - 1 %>&limit=<%= following.limit %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% } %>

                <% for (let i = 1; i <= following.totalPages; i++) { %>
                <li class="page-item <% if (following.currentPage === i) { %>active<% } %>">
                    <a class="page-link" href="?page=<%= i %>&limit=<%= following.limit %>"><%= i %></a>
                </li>
                <% } %>

                <% if (following.currentPage < following.totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= following.currentPage + 1 %>&limit=<%= following.limit %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
                <% } %>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
    <script src="/js/darkmode.js"></script>
    <script src="/js/myfg.js"></script>
</body>
</html>

