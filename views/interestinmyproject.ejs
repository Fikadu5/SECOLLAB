<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Project</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/interestinmyproject.css">
</head>
<body>
    <%- include("navigationloggedin") %>
    <%- include("sidebar") %>
    <% if (messages && messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>
    
    <% if (messages && messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>
    
    <% if (messages && messages.length > 0) { %>
        <div class="alert alert-info">
            <%= messages %>
        </div>
    <% } %>

    <div class="container">
    
            <div class="project-details">
                <h2><%= project.title %></h2>
                <p><%= project.description %></p>
                <p>Due Date: <%= project.dueDate %></p>
            </div>
            
            <h3 style="margin-left: 45%;">Team</h3>
            <div class="team">
                <% for (let i =0; i < project.collaborators.length; i++) { %>
                    <a href="/otherprofile/<%= project.collaborators[i]._id %>">
                        <p><img src="/uploads/<%= project.collaborators[i].image %>"> <%= project.collaborators[i].fname %> <%= project.collaborators[i].lname %></p>
                    </a>
                <% } %>
            </div>
            
            <div class="interests">
                <h3>Interests</h3>
                <div class="row">
                    <% for (let i=0; i< project.requests.length; i++ ) { %>
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <img src="/uploads/<%= project.requests[i].image%>" class="card-img-top" alt="Profile Image">
                                <div class="card-body">
                                    <h5 class="card-title" style="color:white;"><%= project.requests[i].fname %> <%= project.requests[i].lname %></h5>
                                    <button class="accept" user-id="<%= project.requests[i]._id %>" project-id="<%= project._id %>">Accept</button>
                                    <a href="/otherprofile/<%= project.requests[i]._id %>" class="btn btn-primary">View Profile</a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/3259a3ed9a.js" crossorigin="anonymous"></script>
    <script src="/js/interestinmyproject.js"></script>
    <script src="/js/darkmode.js"></script>
</body>
</html>
